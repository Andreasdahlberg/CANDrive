import os

Import(['*'])

SOURCE = Glob('*.c')

SOURCE.append(Glob('memfault-firmware-sdk/components/core/src/*.c'))
SOURCE.append(Glob('memfault-firmware-sdk/components/util/src/*.c'))
SOURCE.append(Glob('memfault-firmware-sdk/components/panics/src/*.c'))
SOURCE.append(Glob('memfault-firmware-sdk/components/metrics/src/*.c'))
SOURCE.append(Glob('memfault-firmware-sdk/ports/panics/src/*.c'))

env.Append(CPPPATH=[
    '#src/modules/board',
    '#src/modules/system_monitor',
    '#src/modules/device_monitoring',
    '#src/modules/systime',
    '#src/modules/third_party/memfault/memfault-firmware-sdk/components/include',
    '#src/modules/third_party/memfault/memfault-firmware-sdk/ports/include',
    '#src/modules/third_party/memfault'
])

OBJECTS = env.Object(SOURCE)

Return('OBJECTS')
